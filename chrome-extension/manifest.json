{
    "manifest_version": 3,
    "name": "Censorship Maxxing",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
        "src/report/form.html",
        "src/report/form.css"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["https://www.x.com/*", "https://x.com/*"],
        "js": ["./src/ingestor/utils.js", "./src/ingestor/twitter.js", "./src/report/form.js"],
        "run_at": "document_start"
      },
      {
        "matches": ["https://www.facebook.com/*", "https://facebook.com/*"],
        "js": ["./src/ingestor/facebook.js"]
      },
      {
        "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
        "js": ["./src/ingestor/youtube.js"]
      }
    ],
    "description": "",
    "version": "1.0",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "./popup.html"
    },
    "background": {
        "service_worker": "./src/background.js"
    }
}   